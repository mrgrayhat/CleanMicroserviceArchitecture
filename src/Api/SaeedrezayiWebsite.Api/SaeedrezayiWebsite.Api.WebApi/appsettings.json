{
  "UseInMemoryDatabase": false,
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=(LocalDB)\\MSSQLLocalDB;Initial Catalog=SaeedRezayiSiteDatabase;AttachDbFilename=|DataDirectory|\\SaeedRezayiSiteDatabase.mdf;Integrated Security=True;MultipleActiveResultSets=True;",
    "IdentityConnection": "Data Source=(LocalDB)\\MSSQLLocalDB;Initial Catalog=SaeedRezayiIdentityDatabase;AttachDbFilename=|DataDirectory|\\SaeedRezayiIdentityDatabase.mdf;Integrated Security=True;MultipleActiveResultSets=True;",
    "BlogConnection": "Data Source=(LocalDB)\\MSSQLLocalDB;Initial Catalog=SaeedRezayiBlogDatabase;AttachDbFilename=|DataDirectory|\\SaeedRezayiBlogDatabase.mdf;Integrated Security=True;MultipleActiveResultSets=True;"
  },
  "LogModuleSettings": {
    "Provider": "MongoDb",
    "ConnectionString": "mongodb://localhost:27017/SaeedRezayiLogs",
    "DatabaseName": "SaeedRezayiSiteLogs",
    "CollectionName": "SiteLogs"
  },
  "Serilog": {
    "Using": [
      "Serilog.Settings.Configuration",
      "Serilog.Sinks.Async",
      "Serilog.Sinks.Console",
      "Serilog.Sinks.MongoDB"
      //,"Serilog.Sinks.File"
    ],
    //"MinimumLevel": {
    //  "Default": "Information",
    //  "Override": {
    //    "Microsoft": "Warning",
    //    "System": "Warning"
    //  }
    //},
    "WriteTo": [
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "(@l = 'Error' or @l = 'Fatal' or @l = 'Warning' or @l = 'Information')"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "MongoDB",
                "Args": {
                  "databaseUrl": "mongodb://localhost:27017/SaeedRezayiSiteLogs",
                  "collectionName": "SiteLogs",
                  "period": "00:00:05"
                  //,"batchSize": 100
                }
              }
            ]
          }
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "Logs/SaeedRezayiSiteLogs.txt",
                "outputTemplate": "{Timestamp:o} [{Level:u3}] ({Application}/{MachineName}/{ThreadId}/{ProcessId}) {Message}{NewLine}{Exception}"
              }
            }
          ]
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console"
            }
          ]
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithProcessId"
      //,"WithUtcTimestamp"
    ],
    "Properties": {
      "Application": "SaeedRezayi.Api",
      "MachineName": "%COMPUTERNAME%"
    }
  },
  "MailSettings": {
    "EmailFrom": "info@saeedrezayi.ir",
    "SmtpHost": "smtp.ethereal.email",
    "SmtpPort": 587,
    "SmtpUser": "doyle.sauer@ethereal.email",
    "SmtpPass": "6X4wBQQYgU14F23VYc",
    "DisplayName": "Saeed Rezayi"
  },
  "JWTSettings": {
    "Key": "C1CF4B7DC4C4175B6618DE4F55CA4",
    "Issuer": "CoreIdentity",
    "Audience": "CoreIdentityUser",
    "DurationInMinutes": 60
  },
  "AllowedHosts": "*"
}
